{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Optional: specify output directory for compiled files
    "rootDir": ".."
  },
  "include": [
    "../**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
